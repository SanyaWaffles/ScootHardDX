Class SHDX_ChickenPlayer : SHDX_PlayerPawn
{
	Default
	{
		Health 250;
		ReactionTime 0;
		PainChance 255;
		Radius 16;
		Height 24;
		Speed 1;
		Gravity 0.35;
		Scale 0.12;
		+NoSkin
		+NoPain
		+NoDamage
		+NoBlood
		
		Player.JumpZ 14;
		Player.ViewHeight 21;
		Player.ForwardMove 1.22, 1.22;
		Player.SideMove 1.22, 1.22;
		Player.SpawnClass "Chicken";
		Player.SoundClass "SoundClass";
		Player.DisplayName "Chicken";
		Player.MorphWeapon "SHDX_ChickenMouth";
	}
	
	States
	{
		Spawn:
			CHKN A 1;
			Loop;
		See:
			CHKN ABCD 4;
			Loop;
		Melee:
		Missile:
			CHKN A 5;
			Goto Spawn;
	}
}

Class SHDX_ChickenMouth : SHDX_Weapon
{
	Default
	{
		Tag "$SHDX_TAG_CHICKENBEAK";
		DamageType "Chicken";
		+WEAPON.CHEATNOTWEAPON
		+WEAPON.DONTBOB
	}
	
	int chargeup;
	
	States
	{
		Ready:
			BEAK A 1 A_WeaponReady;
			Loop;
		Deselect:
			BEAK A 1 A_Lower;
			Loop;
		Select:
			BEAK A 1 A_Raise;
			Loop;
		Fire:
			BEAK A 1;
			BEAK A 2
			{
				invoker.chargeup++;
			}
			BEAK A 5;
			BEAK A 0
			{
				if (invoker.chargeup >= 5)
					return ResolveState("Fire.SuperCluck");
					
				return ResolveState(null);
			}
			BEAK A 0
			{
				double pitchtoshift = 1.0 * invoker.chargeup; 
				A_StartSound("weapons/cluck", CHAN_AUTO, pitch:pitchtoshift);
			}
			BEAK A 0 A_ReFire;
		Fire.Normal:
			BEAK A 3 A_CustomPunch(6, false, 0, "SHDX_ChickenPuff");
			BEAK B 1
			{
				invoker.chargeup = 0;
			}
			BEAK B 1;
			BEAK A 0;
			Goto Ready;
		Fire.SuperCluck:
			BEAK A 0
			{
				A_Explode(350, 1024, false);
				A_StartSound("weapons/chickenx", CHAN_WEAPON);
			}
			BEAK B 5
			{
				invoker.chargeup = 0;
			}
			BEAK A 1;
			Goto Ready;
	}
}