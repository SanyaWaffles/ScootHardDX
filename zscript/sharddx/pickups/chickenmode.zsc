Class SHDX_ChickenFlash : SHDX_Actor
{
	Default
	{
		+NOBLOCKMAP
	}
	
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 1 A_StartSound("powerup/cmode", CHAN_BODY);
			TNT1 A 105;
			Stop;
	}
}

