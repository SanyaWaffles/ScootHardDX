	void A_MaimbowInit()
	{
		A_UnSetInvulnerable();
		A_SHDX_SetToBossBarHUD();
		bCanJump = true;
		isactive = true;
		A_AttachLightDef('maimbowlight', 'SHDX_BOSSLIGHT');
		Console.PrintF("A_MaimbowInit()");
	}
	
