				if (!saidspawnline)
				{
					A_SHDX_PlayBossTaunt("maimbow/spawn", true);
					A_SHDX_BossSubtitle("$SHDX_VOX_MAIMBOW_9", "maimbow/spawn");
					saidspawnline = true;
				}
