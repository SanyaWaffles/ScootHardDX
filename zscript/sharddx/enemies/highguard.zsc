		A_SpawnProjectile("SHDX_RocketGuardMissile", 32, 16);
	}
	
	States
	{
		Missile:
			HIGH A 40
			{
				bNoPain = true;
				A_StartSound("rocketguard/loading", CHAN_WEAPON, attenuation:0.5);
				A_FaceTarget();
			}
			HIGH A 2 A_FaceTarget;
			HIGH I 2 Bright A_RocketGuardFire;
			HIGH J 2
			{
