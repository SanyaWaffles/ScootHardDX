			Goto See;
		Death:
			HIGH L 5 A_NewScream;
			HIGH M 5
			{
				A_NoBlocking();
				A_DropItemsRocketGuard();
			}
			HIGH N 5;
			HIGH O -1 A_SetCorpseShootable;
			Stop;
		Ice:
			HIGH K 5
			{
				A_GenericFreezeDeath();
			}
			HIGH K 1
			{
				A_FreezeDeathChunks();
			}
			Wait;
		Death.Explosive:
		Death.Weather:
		Death.Extreme:
		XDeath:
			GIBX A 3
			{
				A_SHDX_ExtremeScreamAndUnblock();
				A_DropItemsRocketGuard();
				A_SpawnGibsFx(self);
			}
			GIBX B 0 A_SHDX_GivePlayerOneLiner(SHDX_ONELINER_GIB_CHANCE);
			GIBX BC 5;
			GIBX D -1;
			Stop;
	}
