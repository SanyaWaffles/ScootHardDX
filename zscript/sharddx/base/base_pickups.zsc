// Health Pickup actor
Class SHDX_Health : Health
{
	Default
	{
		//$NotAngled
		//$Category "Health and Armor"
		//$Color 1
		
		Radius 14;
		Height 28;
		Scale 0.12;
		Inventory.PickupSound "pickup/healthfood";
	}
	
	override void PlayPickupSound (Actor toucher)
	{
		double atten;
		int chan;
		int flags = 0;

		if (bNoAttenPickupSound)
		{
			atten = ATTN_NONE;
		}
		/*
		else if ((ItemFlags & IF_FANCYPICKUPSOUND) &&
			(toucher == NULL || toucher->CheckLocalView()))
		{
			atten = ATTN_NONE;
		}
		*/
		else
		{
			atten = ATTN_NORM;
		}

		if (toucher != NULL && toucher.CheckLocalView())
		{
			chan = CHAN_ITEM;
			flags = CHANF_NOPAUSE | CHANF_MAYBE_LOCAL;
		}
		else
		{
			chan = CHAN_ITEM;
			flags = CHANF_MAYBE_LOCAL;
		}
		
		flags |= CHANF_OVERLAP;
		
		toucher.A_StartSound(PickupSound, chan, flags, 1, atten);
	}
}

