Class SHDX_ExplosiveBarrel : SHDX_ExplodeyProp
{
	Default
	{
		//$NotAngled
		//$Title "Explosive Barrel"
		//$Sprite EBARA0
		//$Category "Obstacles"
		
		Radius 10;
		Height 28;
		
		+SHOOTABLE
		+NOBLOOD
		
		Health 10;
		
		Obituary "$SHDX_OB_BARREL";
	}
	
	States
	{
		Spawn:
			EBAR A -1;
			Stop;
		
		Death:
			EXPL A 0 A_StartSound("world/barrelx", CHAN_BODY);
			EXPL A 3 Bright A_Quake(2, 8, 0, 1096);
			EXPL BCDEFGHI 3 Bright;
			Stop;
	}
}

