Class SHDX_CoffeeMug : SHDX_Decoration
{
	Default
	{
		//$NotAngled
		//$Title "Coffee Mug"
		//$Sprite CUPCA0
		//$Category "Decoration"
		
		+SHOOTABLE
		+NOBLOOD
		
		Radius 8;
		Height 8;
		Health 1;
	}
	
	States
	{
		Spawn:
			CUPC A -1;
			Stop;
			
		Death:
			TNT1 A 0
			{
				SHDX_Actor.A_SpawnMetalJunkFx(self);
			}
			Stop;
	}
}